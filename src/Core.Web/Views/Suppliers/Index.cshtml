@model IEnumerable<SupplierViewModel>

@{
    ViewData["Title"] = Localizer["Fornecedores"];

    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<a asp-controller="Suppliers" asp-action="Create" class="btn btn-primary float-md-right"> @Localizer["Criar Novo Fornecedor"] <i class="fa fa-chevron-right"></i></a>
<br />
<br />
<br />
<br />
<section class="padding-y">
    @if (Model.Any())
    {
        <table id="table" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>@Localizer["Nome"]</th>
                    <th>@Localizer["Documento"]</th>
                    <th>@Localizer["Ativo"]</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var supplier in Model)
                {
                <tr>
                    <td>@supplier.Id</td>
                    <td>@supplier.Name</td>
                    <td width="20%">@supplier.Document</td>                    
                    <td width="15%" class="text-center py-0 align-middle">
                        <div class="btn-group btn-group-sm">
                            <a class="btn bg-blue" asp-controller="Suppliers" asp-action="Edit" asp-route-id="@supplier.Id" data-toggle="tooltip" data-placement="right" title="@LocalizerGeneral["Editar"]"><i class="fas fa-edit"></i></a>&nbsp&nbsp
                            <button id="Delete" value="Suppliers" name="@supplier.Id" class="btn bg-danger" type="button" data-toggle="tooltip" data-placement="right" title="@LocalizerGeneral["Deletar"]"><i class="far fa-trash-alt"></i></button>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>@Localizer["Não existe Fornecedor cadastrado"]</p>
    }
</section>