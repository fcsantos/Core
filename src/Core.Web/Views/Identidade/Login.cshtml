@model Core.Web.Models.UsuarioLogin

@{
    ViewData["Title"] = "Login de usuário";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<section class="section-conten padding-y container" style="min-height:35vh">
    
    <vc:Summary></vc:Summary>

    <div class="login-box">


        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <img src="https://www.lusodata.pt/wp-content/themes/pdm-lusodata/assets/images/logo-lusodata.svg" alt="Lusodata">
            </div>
            <div class="card-body">
                <h4 class="card-title mb-4">Seja bem vindo!</h4>
                <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">

                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Entrar</button>
                    </div>
                </form>
            </div>            

