@using Core.Web.Extensions

@inject IAspNetUser AppUser


<ul class="navbar-nav">
    @if (AppUser.EstaAutenticado())
    {
        <li class="nav-item">
            <a class="nav-link text-dark" title="Manage">Olá @AppUser.ObterUserEmail()</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Identidade" asp-action="Logout">Sair</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="btn btn-primary" asp-controller="Identidade" asp-action="Login">Login</a>
        </li>
    }
</ul>