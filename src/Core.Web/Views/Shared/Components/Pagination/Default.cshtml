    <ul class="pagination justify-content-end">
        @if (Model.ShowPrevious)
        {
        <li class="page-item">
            <a asp-action="@Model.ReferenceAction" asp-route-page="@(Model.PageIndex -1)"  asp-route-q="@Model.Query" asp-route-ps="@Model.PageSize" class="page-link">Previous</a>
        </li>
        }
        @if (Model.ShowNext)
        {
        <li class="page-item">
            <a asp-action="@Model.ReferenceAction" asp-route-page="@(Model.PageIndex + 1)" asp-route-q="@Model.Query" asp-route-ps="@Model.PageSize" class="page-link">Next</a>
        </li>
        }
    </ul>
